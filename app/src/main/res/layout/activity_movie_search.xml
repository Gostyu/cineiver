<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MovieSearchActivity">
    <TextView
        android:id="@+id/movieSearchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="128dp"
        android:textColor="@android:color/black"
        android:text="@string/movieSearchTitle"
        android:textSize="38dp"
        android:textFontWeight="600"
    />
    <EditText
        android:id="@+id/movieEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="42dp"
        android:layout_marginHorizontal="28dp"
        android:paddingHorizontal="5dp"
        android:hint="@string/movieSearchHint"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/movieSearchTitle"
        app:layout_constraintLeft_toLeftOf="@id/movieSearchTitle"
        app:layout_constraintRight_toRightOf="@id/movieSearchTitle"
        android:imeOptions="actionSearch"
        android:inputType="text"
        ></EditText>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movieSearchrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/movieEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        tools:listitem="@layout/movielist_item"
        ></androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>